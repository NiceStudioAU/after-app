{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@assets/*": [
                "src/assets/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@navigators/*": [
                "src/navigators/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ],
            "@state/*": [
                "src/state/*"
            ],
            "@views/*": [
                "src/views/*"
            ],
        },
        "exclude": [
            "node_modules",
        ]
    }
}